name: Add YouTube Videos as Jekyll Posts

on:
  schedule:
    - cron: '0 3 * * *'  # Every day at 3:00 UTC
  workflow_dispatch:

jobs:
  update-posts:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'
      - name: Install dependencies
        run: pip install requests
      - name: Fetch YouTube videos and create posts
        env:
          YOUTUBE_API_KEY: ${{ secrets.YOUTUBE_API_KEY }}
        run: python fetch_youtube_videos.py
      - name: Commit & push changes
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add _posts/
          git diff --cached --quiet || git commit -m "Add new YouTube videos as posts [auto]"
          git push
